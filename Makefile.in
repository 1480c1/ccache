
prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
mandir=@mandir@
INSTALLCMD=@INSTALL@

CC=@CC@
CFLAGS=@CFLAGS@

OBJS= ccache.o mdfour.o hash.o execute.o util.o args.o stats.o cleanup.o snprintf.o
HEADERS = ccache.h mdfour.h

all: ccache ccache.1

ccache: $(OBJS) $(HEADERS)
	$(CC) $(CFLAGS) -o $@ $(OBJS)

ccache.1: ccache.yo
	yodl2man -o ccache.1 ccache.yo
	yodl2html -o web/ccache-man.html ccache.yo

install:
	${INSTALLCMD} -m 755 ccache ${bindir}
	${INSTALLCMD} -m 644 ccache.1 ${mandir}/man1

clean:
	/bin/rm -f $(OBJS) *~ ccache

distclean:
	/bin/rm -f Makefile config.h config.sub config.log build-stamp config.status
